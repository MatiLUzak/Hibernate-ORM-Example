<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="POSTGRES_RENT_PU" transaction-type="RESOURCE_LOCAL">
        <!-- Klasy encji zostaną dodane tutaj później -->
        <class>org.example.model.TypWypozyczajacy</class>
        <class>org.example.model.Uczen</class>
        <class>org.example.model.Nauczyciel</class>
        <class>org.example.model.Pozostali</class>
        <class>org.example.model.Ksiazka</class>
        <class>org.example.model.Beletrystyka</class>
        <class>org.example.model.Czasopismo</class>
        <class>org.example.model.Naukowa</class>
        <class>org.example.model.Wolumin</class>
        <class>org.example.model.Wypozyczajacy</class>
        <class>org.example.model.Wypozyczenie</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
            <property name="jakarta.persistence.jdbc.user" value="nbd"/>
            <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>
